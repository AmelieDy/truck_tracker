.row
  .col-md-12
    %h2.mt-2= "#{trucks.size} Trucks disponibles"
    .row
      - trucks.each do |truck|
        .col-md-6.col-lg-3
          .card.mt-5
            %img.card-img-top{:alt => "Card image cap", :src => truck.image}/
            .card-body
              %h5.card-title= truck.name
              %h6.card-category= truck.category
              %p.card-text= truck.description.truncate(120)
              %div{id: "book-button-#{truck.id}", class: "book-button"}
                = render 'book_button', truck: truck
.mt-5
  = paginate trucks, theme: 'twitter-bootstrap-4'
